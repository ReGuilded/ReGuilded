{
  "name": "reguilded",
  "version": "1.0.0-alpha",
  "description": "ReGuilded is a client injector/client mod that allows you to extend the functionality of Guilded's client by providing theme and addon support.",
  "main": "",
  "type": "commonjs",
  "scripts": {
    "prettify": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "lint": "eslint .",
    "clean": "npm run prettify && npm run lint",
    "build": "npm install && npm run clean && rollup -c config/rollup.config.js",
    "buildAndPack": "npm run build && asar pack ./out/reguilded ./out/reguilded.asar",
    "injector": "npm run buildAndPack && node ./out/injector.js",
    "inject": "npm run injector -- --task \"inject\"",
    "uninject": "npm run injector -- --task \"uninject\"",
    "update": "npm run injector -- --task \"update\"",
    "injectbare": "node ./out/injector.js --task \"inject\"",
    "uninjectbare": "node ./out/injector.js --task \"uninject\"",
    "updatebare": "node ./out/injector.js --task \"update\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ReGuilded/ReGuilded.git"
  },
  "author": "ReGuilded",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ReGuilded/ReGuilded/issues"
  },
  "homepage": "https://github.com/ReGuilded/ReGuilded#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/minimist": "^1.2.2",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "electron": "20.1.2",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "minimist": "^1.2.6",
    "prettier": "^2.7.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-styles": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sudo-prompt": "^9.2.1",
    "typescript": "^4.8.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "eslintIgnore": [
    "package-lock.json",
    "out",
    "node_modules",
    ".idea"
  ],
  "prettier": {
    "printWidth": 125,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "always",
    "proseWrap": "always"
  }
}
