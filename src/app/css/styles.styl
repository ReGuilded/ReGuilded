@require "./util.styl"

.ReGuilded
    // Util
    &ErrorBoundary-error
        // Align code block to the left, because we set text alignment to center in the ErrorBoundary's error display
        text-align: left
    // Settings
    &Enhancement
        // All
        &s-container
            // Looks awful when enhancement touches the very bottom
            padding-bottom: 10px
        &s-topbar
            margin-bottom: 16px
        &s-search
            float: left
            width: 246px
        &s-sort
            float: right
        &s-grid
            // Enhancement height
            grid-auto-rows: 210px

        &-footer
            // Don't center it
            align-items: start
        &-info-point:not(:first-child)
            margin-top: 10px

        &-subtitle
            margin: 5px 0
        &-text
            word-break: break-all
            hyphens: auto

        // Single enhancement
        &-container
            transition: transform 0.1s ease-out
            &:hover
                transform: translateY(-2px)

        // Enhancement page
        &Page
            &-container
                padding: 20px 32px
                max-width: 100%
            &-banner
                margin-bottom: 16px
            &-subtitle
                margin-bottom: 15px
        &Images
            &-container
                margin-bottom: 15px
            &-heading
                margin-bottom: 8px
            &-media
                // Otherwise carousel won't work
                position: relative

                min-width: 400px
                max-width: 900px

                &:not(:first-child)
                    margin-left: 10px
    &Settings
        &-container
            padding-horizontal: 32px
        &-divider
            margin: 14px 0
        &-info-item:not(:first-child)
            margin-top: 10px
        &Wrapper-container
            &-no-padding
                padding: 0
            &-cover
                width: 100%